extends layout

block content
  script(type='text/javascript')
    var helloThere = !{JSON.stringify(Record.name)};
  h1= helloThere
  h1= title
  p Welcome to #{title}
  p This is the second assignment for CS496 - Mobile and Cloud Software Development
  p It is currently #{date}
  h4 using:
    li nodejs + express
    li jade templating
    li heroku + mongolab app deployment
    li mongodb + mongoose database

  h2 Record to Edit:
  table.table-striped.table.condensed
    thead
      tr
        th ID
        th Name
        th Email
        th Password
        th Gender
        th Admin
    tbody
      each record, i in Record
        tr 
          td #{record._id}
          td #{record.name}
          td #{record.email}
          td #{record.password}
          td #{record.gender}
          td #{record.admin}
  h2 Edit Record:
  form(method='post', action='/edit/')
    .form-group
      label.sr-only(for='inputName') Name
      input#inputName.form-control(type='text', name='name', placeholder='New Name')
    .form-group
      label.sr-only(for='inputEmail') Email
      input#inputEmail.form-control(type='email', name='email', placeholder='New Email')
    .form-group
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name='password', placeholder='New Password (USE FAKE PASSWORD)')
    .form-group
      label.sr-only(for='inputGender') Gender
      input(type='radio', name='gender', value='male', checked='')
      |   Male  
      input(type='radio', name='gender', value='female')
      |   Female  
      input(type='radio', name='gender', value='opted-out')
      |   Opt-Out  
    .form-group
      label.sr-only(for='inputAdmin') Admin
      input(type='checkbox', name='admin', value='true')
      |   Admin

    button.btn.btn-primary.btn-block(type='submit') Save